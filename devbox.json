{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "env": {
    "COURSIER_BIN_DIR": "$DEVBOX_PROJECT_ROOT/bin/coursier/",
    "KAFKA_CTL_CONFIG": "$DEVBOX_CONFIG_DIR/kafkactl/config.yml",
    "KUBECONFIG":       "$DEVBOX_CONFIG_DIR/.kube/config",
    "PATH":             "$DEVBOX_PROJECT_ROOT/bin/:$DEVBOX_PROJECT_ROOT/bin/coursier/:${PATH}",
  },
  "packages": [
    "scala@latest",
    "coursier@latest",
    "jdk@17.0.12",
    "zed-editor@latest",
    "sbt@latest",
    "kafkactl",
    "kubectl@latest",
    "k3d@latest",
  ],
  "shell": {
    "init_hook": [
      "source <(kubectl completion zsh)",
      "source <(kafkactl completion zsh)",
      "source <(k3d completion zsh)",
      "echo 'Welcome to devbox!' > /dev/null",
    ],
    "scripts": {
      "cluster-create": "k3d cluster create --config devbox.d/k3d/config.yaml",
      "recreate": "zsh $DEVBOX_PROJECT_ROOT/scripts/recreate.sh",
      "test": [
        "echo \"Error: no test specified\" && exit 1",
      ],
    },
  },
}
